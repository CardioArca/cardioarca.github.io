<section class="relative bg-navy-blue text-white py-16 px-4 overflow-hidden">
  {/* Background Image of Server Room */}
  <img src="/public/server-room.jpg" alt="Server room with data security" class="absolute inset-0 w-full h-full object-cover opacity-30" />
  {/* Lock Icon Overlay - placeholder */}
  <div class="absolute inset-0 flex items-center justify-center z-0">
    <img src="/icons/lock.svg" alt="Lock icon" class="w-24 h-24 opacity-50" />
  </div>

  <div class="relative z-10 container mx-auto flex flex-col md:flex-row items-center justify-between">
    {/* Text Content */}
    <div class="md:w-1/2 text-center md:text-left mb-8 md:mb-0 animate-fade-in-right">
      <h2 class="text-4xl font-bold text-white mb-6">Your Privacy is Our Priority</h2>
      <ul class="list-disc list-inside space-y-3 text-lg">
        <li class="animate-fade-in-right">HIPAA & GDPR Compliant Encryption</li>
        <li class="animate-fade-in-right">Multi-factor Authentication</li>
        <li class="animate-fade-in-right">Secure Cloud Storage</li>
      </ul>
    </div>

    {/* Placeholder for Icon Elements (will be part of text or stylized lists) */}
    <div class="md:w-1/2 flex justify-center md:justify-end animate-fade-in-left">
      {/* This 'div' is primarily for controlling the animation timing and could hold more complex interactive icon elements if needed. 
          For now, icons are integrated directly into the list items. */}
    </div>
  </div>
</section>

<style>
  .bg-navy-blue {
    background-color: #2196F3; /* Navy Blue */
  }
  .animate-fade-in-left {
    opacity: 0;
    transform: translateX(-20px);
    animation: fadeInLeft 1s forwards;
  }

  @keyframes fadeInLeft {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .animate-fade-in-right {
    opacity: 0;
    transform: translateX(20px);
    animation: fadeInRight 1s forwards;
  }

  @keyframes fadeInRight {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
</style>