<section class="py-20 px-4 text-center">
  <div class="container mx-auto">
    <h2 class="text-4xl font-bold mb-8">
      Ready to Transform Your Healthcare Experience?
    </h2>
    <div class="flex flex-col sm:flex-row justify-center items-center gap-4">
      <button
        class="bg-white text-navy-blue font-bold py-3 px-8 rounded-full shadow-lg hover:bg-gray-100 transition duration-300 transform hover:scale-105 animate-pulse"
      >
        Sign Up
      </button>
      <button
        class="bg-navy-blue text-white font-bold py-3 px-8 rounded-full shadow-lg border-2 border-white hover:bg-gray-800 transition duration-300"
      >
        Request a Demo
      </button>
      <button
        class="bg-accent-blue text-white font-bold py-3 px-8 rounded-full shadow-lg hover:bg-blue-700 transition duration-300"
      >
        Join Wait List
      </button>
    </div>
  </div>
</section>

<style>
  .bg-accent-blue {
    background-color: #007bff; /* Accent Blue */
  }
  .bg-navy-blue {
    background-color: #2196f3; /* Navy Blue */
  }

  /* Pulse animation for the "Sign Up" button */
  .animate-pulse {
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%,
    100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
  }
</style>
